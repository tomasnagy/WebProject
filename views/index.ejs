<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/normalize.css"/>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
</head>
<body ng-app="app">
        <!--background will be absolute, background forces height-->
    <div id="container" ng-controller="HistoryItemController">
        <figure id="background-image">
            <img src="/images/bg.svg" alt="background" title="background"/>

            <p ng-repeat="i in items">{{i.year}}</p>

        </figure>
        <section ng-repeat="i in items" repeat-done="layoutDone()">
            <h1 class="hidden">{{i.title}}</h1>
            <h2 class="hidden">{{i.date}}</h2>
            <img class="fullyhidden" ng-src="{{i.image}}" alt="{{i.title}}" title="{{i.title}}"/>
            <p class="fullyhidden">{{i.description}}</p>
        </section>
    </div>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/gsap/1.14.2/TweenMax.min.js" type="application/javascript"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.27/angular.min.js" type="application/javascript"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.27/angular-route.js" type="application/javascript"></script>
    <script src="/javascripts/animations.js"></script>
    <script src="/javascripts/guitarhistory/app.js" type="text/javascript"></script>
    <script src="/javascripts/guitarhistory/model/GuitarHistoryItem.js" type="text/javascript"></script>
    <script src="/javascripts/guitarhistory/directive/layoutDoneDirective.js" type="text/javascript"></script>
    <script src="/javascripts/guitarhistory/controller/HistoryItemController.js" type="text/javascript"></script>
</body>
</html>
